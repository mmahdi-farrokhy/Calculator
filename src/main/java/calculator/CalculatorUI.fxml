         </children>
         <BorderPane.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="seven" mnemonicParsing="false" onAction="#sevenButtonPressed" prefHeight="50.0" prefWidth="50.0" text="7" />
            <Button fx:id="eight" layoutX="55.0" mnemonicParsing="false" onAction="#eightButtonPressed" prefHeight="50.0" prefWidth="50.0" text="8" />
